<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/voiceAnimationContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/voice_bg"
        android:padding="8dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/voiceStatusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Listening..."
            android:textColor="#4285F4"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:orientation="horizontal"
            android:gravity="center">

            <View
                android:id="@+id/voiceBar1"
                android:layout_width="3dp"
                android:layout_height="16dp"
                android:layout_marginEnd="2dp"
                android:background="#4285F4"/>

            <View
                android:id="@+id/voiceBar2"
                android:layout_width="3dp"
                android:layout_height="16dp"
                android:layout_marginEnd="2dp"
                android:background="#4285F4"/>

            <View
                android:id="@+id/voiceBar3"
                android:layout_width="3dp"
                android:layout_height="16dp"
                android:layout_marginEnd="2dp"
                android:background="#4285F4"/>

            <View
                android:id="@+id/voiceBar4"
                android:layout_width="3dp"
                android:layout_height="16dp"
                android:layout_marginEnd="2dp"
                android:background="#4285F4"/>

            <View
                android:id="@+id/voiceBar5"
                android:layout_width="3dp"
                android:layout_height="16dp"
                android:background="#4285F4"/>

        </LinearLayout>

        <TextView
            android:id="@+id/voiceTapText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap microphone to stop"
            android:textColor="#757575"
            android:textSize="10sp"
            android:layout_marginTop="8dp"/>

    </LinearLayout>
</FrameLayout>
